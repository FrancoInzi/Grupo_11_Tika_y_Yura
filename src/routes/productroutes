
const express = require('express');
const { productDetail, productCart, createProduct, editProduct, saveProduct, allProduct} = require('../controller/productcontroller')

const routerProduct = express.Router();

routerProduct.get('/product/allproducts',  allProduct);

routerProduct.get('/product/productdetail/:id',  productDetail);

routerProduct.get('/product/productcart',  productCart);
//Acción de creación (a donde se envía el formulario)
routerProduct.get('/product/createproduct',  createProduct);
routerProduct.post('/product/createproduct', saveProduct)
//accion de edicion 
routerProduct.get('/product/editproduct',  editProduct);

//Listado de productos
routerProduct.get('/product/allproducts', )




//Formulario de edición de productos
routerProduct.get ('/products/:id/edit', )

//Acción de edición (a donde se envía el formulario)
routerProduct.put ('/products/:id/edit', )

//Acción de borrado
routerProduct.delete('/products/:id', )




module.exports=routerMain;
