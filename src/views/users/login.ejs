    <%- include('../partials/head',{css:"login", title:"login"}) %>
<body>
    <%- include('../partials/header') %>
    <main class="content">


        <div class="container-login">
            <div class="shadow">
                <form class="form-login" action="/users/login" method="POST" >
                    <h1  class="inicio">Iniciar Sesión</h1>
                    <label class="form-usr"  for="email">Email:</label>
                    <input  class="input-usr"  type="email" id="email" name="email">
                    <% if (locals.errors && errors.email) { %>

                        <div class="text-danger">
                            <%= errors.email.msg  %>
                        </div>
        
                    <% } %>
                    <label  class="form-usr"   for="password">Contraseña:</label>
                    <input  class="input-usr"  type="password" id="password" name="password" required>
                    <input  class="input-usr"  type="submit" value="Iniciar Sesión">
                
                </form>
            </div>


        </div>
    </main>
    <!-- <script src="../../../public/js/login.js"></script> -->
    <%- include('../partials/footer') %>
</body>

